<!-- cachelist 
	cache -->

<xsd:element name="CacheList" type="CacheListType"/>

<xsd:complexType name="CacheListType">
	<xsd:element name="Cache" type="CacheType">
		<xsd:complexType>
        	<xsd:attribute name="c_id" type="cIdRestriction"/> 
        </xsd:complexType>
	</xsd:element>
</xsd:complexType>

<xsd:simpleType name="cIdRestriction">
	<xsd:restriction base="xsd:token"> 
		<xsd:pattern value="[c][0-9]{4}"/> <!--  nur c+4stellige zahl -->
    </xsd:restriction> 
</xsd:simpleType>

<xsd:simpleType name="bIdRestriction">
	<xsd:restriction base="xsd:token"> 
		<xsd:pattern value="[b][0-9]{4}"/> <!--  nur c+4stellige zahl -->
    </xsd:restriction> 
</xsd:simpleType>

<xsd:simpleType name="lIdRestriction">
	<xsd:restriction base="xsd:token"> 
		<xsd:pattern value="[l][0-9]{4}"/> <!--  nur c+4stellige zahl -->
    </xsd:restriction> 
</xsd:simpleType>

<xsd:simpleType name="kIdRestriction">
	<xsd:restriction base="xsd:token"> 
		<xsd:pattern value="[k][0-9]{4}"/> <!--  nur c+4stellige zahl -->
    </xsd:restriction> 
</xsd:simpleType>


<!--  cache
	location
	name
	datum
	typ
	owner
	parkplatz
	informationen
	logs
	kommentare -->       
	
<xsd:complexType name="CacheType">
	<xsd:sequence>
		<xsd:element name="location">
			<xsd:complexType>
        		<xsd:attribute name="lat" type="latRestriction"/>
        		<xsd:attribute name="lon" type="lonRestriction"/>
   			</xsd:complexType>
		</xsd:element> 
		<xsd:element name="Name" type="xsd:string"/>
		<xsd:element name="Datum" type="dateRestriction"/>
		<xsd:element name="Typ" type="cacheTypeEnum"/>
		<xsd:element name="Owner" type="xsd:string">
			<xs:complexType>
    			<xs:attribute name="b_id" type="bIdRestriction" />
    		</xs:complexType>
    	</xsd:element>
		<xsd:element name="Parkplatz" type="xsd:string">
			<xsd:complexType>
        		<xsd:attribute name="lat" type="latRestriction"/>
        		<xsd:attribute name="lon" type="lonRestriction"/>
   			</xsd:complexType>
		</xsd:element>
		<xsd:element name="Informationen" type="InformationenType"/>
		<xsd:element name="Logs" type="LogsType"/>
		<xsd:element name="Kommentare" type="KommentareType"/>
	</xsd:sequence>
	<!-- <xsd:attribute name"c_id" type="cType" use="required"/> -->
</xsd:complexType>

<xsd:simpleType name="latRestriction">
	<xsd:restriction base="xsd:decimal"> 
		<xsd:pattern value="[\d]{1,2}\.[\d]{0,6}"/> <!-- kein minus, 1-2 zeichen vor punkt, 0-6 nach punkt -->
    </xsd:restriction> 
</xsd:simpleType>

<xsd:simpleType name="lonRestriction">
	<xsd:restriction base="xsd:decimal"> 
		<xsd:pattern value="-?[\d]{1,3}\.[\d]{0,6}"/> <!-- optionales minus, 1-3 zeichen vor punkt, 0-6 nach punkt -->
    </xsd:restriction> 
</xsd:simpleType>
   
<xsd:simpleType name="dateRestriction">
	<xsd:restriction base="xsd:decimal"> 
		<xsd:pattern value=" [0-9]{1,2}\.[0-9]{1,2}\.[0-9]{4}"/> <!-- kein minus, 1-2 zeichen vor punkt, 0-6 nach punkt -->
    </xsd:restriction> 
</xsd:simpleType>
  
<xs:simpleType name="cacheTypeEnum">
	<xs:restriction base="xs:string">
		<xs:enumeration value="Traditional Cache" />
		<xs:enumeration value="Multi Cache" />
		<xs:enumeration value="Puzzle Cache" />
		<xs:enumeration value="Mystery Cache" />
		<xs:enumeration value="Unknown Cache" />
	</xs:restriction>
</xs:simpleType>

