<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.example.org/CacheList" xmlns:tns="http://www.example.org/CacheList" elementFormDefault="qualified">


cachelist
	cache

<xsd:element name="CacheList" type="CacheListType"/>

<xsd:complexType name="CacheListType">
	<xsd:element name="Cache" type="CacheType">
		<xsd:complexType>
        	<xsd:attribute name="c_id" type="???"/> --> restriction implementieren
        </xsd:complexType>
	</xsd:element>
</xsd:complexType>

cache
	location
	name
	datum
	typ
	owner
	parkplatz
	informationen
	logs
	kommentare
	
<xsd:complexType name="CacheType">
	<xsd:sequence>
		<xsd:element name="location">
			<xsd:complexType>
        		<xsd:attribute name="lat" type="decRestrictionLat"/>
        		<xsd:attribute name="lon" type="decRestrictionLon"/>
   			</xsd:complexType>
		</xsd:element> 
		<xsd:element name="Name" type="xsd:string"/>
		<xsd:element name="Datum" -->Attribut Datum
		<xsd:element name="Typ" -->Enumeration als Attribut
		<xsd:element name="Owner" type="xsd:string"/>-->Owner als Attribut
		<xsd:element name="Parkplatz">
			<xsd:complexType>
        		<xsd:attribute name="lat" type="decRestrictionLat"/>
        		<xsd:attribute name="lon" type="decRestrictionLon"/>
   			</xsd:complexType>
		</xsd:element>
		<xsd:element name="Informationen" type="InformationenType"/>
		<xsd:element name="Logs" type="LogsType"/>
		<xsd:element name="Kommentare" type="KommentareType"/>
	</xsd:sequence>
	<xsd:attribute name"c_id" type="cType" use="required"/>
</xsd:complexType>

<xsd:simpleType name="decRestrictionLat">
	<xsd:restriction base="xsd:decimal"> 
		<xsd:pattern value="[\d]{1,2}\.[\d]{0,6}"/> --> kein minus, 1-2 zeichen vor punkt, 0-6 nach punkt
    </xsd:restriction> 
</xsd:simpleType>

<xsd:simpleType name="decRestrictionLon">
	<xsd:restriction base="xsd:decimal"> 
		<xsd:pattern value="-?[\d]{1,3}\.[\d]{0,6}"/> --> optionales minus, 1-3 zeichen vor punkt, 0-6 nach punkt
    </xsd:restriction> 
</xsd:simpleType>

<xsd:restriction base="xsd:decimal"> 
      <xsd:minExclusive value="0"/> 
      <xsd:fractionDigits value="2"/> 
    </xsd:restriction> 
    
<xsd:simpleType name="cType">
	<xsd:restriction base="xsd:string">
		<xs:pattern value="[c][0-9][0-9][0-+9][0-9]"/>
		<xs:Length value="5"/>
	</xsd:restriction>
</xsd:simpleType>
informationen
	schwierigkeit
	terrain
	land
	Bundesland
	provinz
	beschreibung_klein
	beschreibung_lang
	Hinweise
	geschätze_zeit
